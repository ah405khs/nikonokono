<ul class="collection">
  <% @posts.each do |post| %>
  <a href="<%= post.id %>">
    <li class="collection-item avatar">
      <div class="row">
        <div class="col s1">
      <img src="http://img.youtube.com/vi/<%= post.ytb_key %>/default.jpg" alt="http://img.youtube.com/vi/<%= post.ytb_key %>/default.jpg" class="go-center">
    </div>
      <div class="col s7">
      <span class="title"><%= post.title %></span>
      <p>
        작성자: <%= post.user.present? ? post.user.email : "null" %> <br>
         <%= post.singer %>  <%= post.song %>
      </p>
    </div>
    <div class="col s2 center">
      조회수 : <%= post.hit %>
      <br>
      <br>
      <i class="fa fa-heart-o" aria-hidden="true"></i> <%= post.reconum %>
    </div>
    <div class="col s1 offset-s1">
      <a href="#!" class="secondary-content"><%= time_ago_in_words(post.created_at) %> ago</a>
    </div>

    </div>
    </li>
  </a>
  <% end %>
  </ul>
