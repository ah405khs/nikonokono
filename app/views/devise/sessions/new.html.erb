<div class="container" style="margin-top: 4%;">
  <div class="row">
    <div class="col white offset-s4 s4 z-depth-3" style="padding: 0 !important;">
  <div class="teal white-text center" style="padding: 2px 0; margin:0;">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
</div>
<div style="padding: 0 10%;">
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "이메일"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, value: "이메일을 저장하시겠습니까?" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "로그인", class: 'btn amber', style:"text-align:center; margin-top:15px; margin-bottom:15px; width: 100%; " %>
    </div>
  <% end %>
</div>
<ul>
  <%= render "devise/shared/links" %>
</ul>
</div>
</div>
</div>
