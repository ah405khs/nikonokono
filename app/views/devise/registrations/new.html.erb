<div class="container" style="margin-top: 4%;">
  <div class="row">
    <div class="col white offset-s4 s4 z-depth-3" style="padding: 0 !important;">
  <div class="teal white-text center" style="padding: 2px 0; margin:0;">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
</div>
<div style="padding: 0 10%;">
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "이메일" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "비밀번호 확인" %>
  </div>

  <div class="actions">
          <%= f.submit "회원 가입 완료", class: 'btn amber', style:"text-align:center; margin-top:15px; margin-bottom:15px; width: 100%; " %>
  </div>
<% end %>
</div>
<ul>
<%= render "devise/shared/links" %>
</ul>
</div>
</div>
</div>
